@model IEnumerable<SHM_Smart_Hospital_Management_.ViewModels.BusyRooms>

@{
    ViewData["Title"] = "BusyRooms";
}
@section Styles{
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Medicio2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Medicio2/create.css" rel="stylesheet" />
    <link href="~/Medicio2/Delete.css" rel="stylesheet" />
    <style>
        html {
            height: 100vh;
        }

        body {
            padding: 10px;
        }
    </style>
}
<div class="All_form" style="direction: rtl; text-align: right; background-color: white ">
    <table class="table" style="direction:ltr">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientName)
                </th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            string confirm = "confirm" + i;
                            string cancel = "cancel" + i;
                            string delete = "delete" + i;
                        }
                        <a id="@delete" class="btn delete_btn" onclick="Confirm(@i)" style="margin-right:15px">إلغاء الحجز</a>
                        <a id="@cancel" class="btn Cancel_btn" onclick="Cancel(@i)">إلغاء</a>
                        <a class="btn Confirm_btn" asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.Id" asp-route-EmpId="@ViewBag.EmpId" asp-route-HoId="@ViewBag.HoId" id="@confirm">تأكيد</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientName)
                    </td>

                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
<a asp-controller="Employee" asp-action="Master" asp-route-id="@ViewBag.EmpId" style="position: relative; left: 45%;">رجوع للصفحة الرئيسية</a>

@section Scripts{
    <script src="~/ConfirmDelete.js"></script>
}
