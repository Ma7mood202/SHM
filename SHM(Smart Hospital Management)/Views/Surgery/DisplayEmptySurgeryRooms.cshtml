@model IEnumerable<SHM_Smart_Hospital_Management_.Models.Surgery_Room>

@{
    ViewData["Title"] = "DisplayEmptySurgeryRooms";
}
@section Styles{
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Medicio2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Medicio2/create.css" rel="stylesheet" />
    <style>
        html {
            height: 100vh;
        }
    </style>

}
<div class="All_form" style="direction: rtl; width: 82%; position: relative; right: 17%; background-color: white">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Su_Room_Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Su_Room_Floor)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Su_Room_Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Su_Room_Floor)
                    </td>
                    <td>
                        <a asp-action="DisplayPatients" asp-route-id="@item.Surgery_Room_Id" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId">اختيار </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="DisplaySurgeries" asp-route-id="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId" style="position: relative; left: 47%;">رجوع للخلف</a>

@section Scripts{
    <script src="~/Medicio2/dashborde/vendor/jquery/jquery.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/jquery-easing/jquery.easing.min.js"></script>
}
