@model IEnumerable<SHM_Smart_Hospital_Management_.Models.Patient>

@{
    ViewData["Title"] = "DoctorIndex";
}

@section Styles{
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Medicio2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Medicio2/delete.css" rel="stylesheet" />*@
    <link href="~/Medicio2/create.css" rel="stylesheet" />
    <style>
        html {
            height: 100vh;
        }
    </style>
}
<div class="All_form" style="direction: rtl; width: 82%; position: relative; right: 17%; background-color: white">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Full_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_National_Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Social_Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient_Birth_Date)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Full_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_National_Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Social_Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Birth_Date)
                    </td>
                    <td>
                        <a asp-action="DetailsForDoctor" asp-route-id="@item.Patient_Id" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId">Details</a> |
                        <a asp-controller="Medical_Detail" asp-action="ShowMedicalDetailsForDoctor" asp-route-id="@item.Patient_Id" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId">Show Medical Detail</a>|
                        @{
                            string confirm = "confirm" + i;
                            string cancel = "cancel" + i;
                            string delete = "delete" + i;
                        }
                        <a id="@delete" class="btn delete_btn" onclick="Confirm(@i)">حذف</a>
                        <a id="@cancel" class="btn Cancel_btn" onclick="Cancel(@i)">إلغاء</a>
                        <a class="btn Confirm_btn" asp-action="SetAllCaringsFalse" asp-route-id="@item.Patient_Id" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId" id="@confirm">تأكيد</a>
                        @{i++;}
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-controller="Doctor" asp-action="Master" asp-route-id="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId" style=" position: relative; left: 45%;">Back To Master Page</a>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/ConfirmDelete.js"></script>
    <script src="~/Medicio2/dashborde/vendor/jquery/jquery.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/jquery-easing/jquery.easing.min.js"></script>
}
