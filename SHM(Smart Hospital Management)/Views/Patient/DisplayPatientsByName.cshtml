@model IEnumerable<SHM_Smart_Hospital_Management_.ViewModels.ShowPatientForNurse>

@{
    ViewData["Title"] = "HoPatientsForPreview";
}
@section Styles{
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Medicio2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Medicio2/create.css" rel="stylesheet" />
    <style>
        html {
            height: 100vh;
        }
    </style>
}
<div class="All_form" style="direction: rtl; width: 82%; position: relative; right: 17%; background-color:white">
    <table class="table">
        <thead>
            <tr>
                <th>
                    اسم المريض
                </th>
                <th>
                    العمر
                </th>
                <th>
                    خطط العلاجية
                </th>
                <th>
                    زمرة الدم
                </th>
                <th>
                    احتياجات خاصة
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatinntName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plans)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialNeeds)
                    </td>
                    <td>
                        @* الملف الطبي ...  *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-controller="Employee" asp-action="Master" asp-route-id="@ViewBag.EmpId" style=" position: relative; left: 45%;">رجوع للصفحة الرئيسية</a>
@section Scripts{
    <script src="~/Medicio2/dashborde/vendor/jquery/jquery.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/jquery-easing/jquery.easing.min.js"></script>
}