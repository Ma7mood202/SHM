<div class="limiter">
    <div class="container-login100" style="background-image: url('~/Medicio2/login/images/bg-01.jpg');">
        <div class="wrap-login100">
            <form class="login100-form validate-form" asp-action="LogIn" method="post">
                <img src="~/Medicio2/assets/img/avatar/admin.jpg" class="text-centr">

                <span class="login100-form-title p-b-34 p-t-27">
                    تسجيل دخول
                </span>
                <p style="color: brown; text-align: center; font-size: large; text-shadow: -6px 0px 7px grey;">@TempData["LogInFailed"]</p>
                <div class="wrap-input100">
                    <input class="input100" type="text" name="email" placeholder="إسم المستخدم" required>
                    <span class="focus-input100" data-placeholder="&#xf207;"></span><span class="input-group-text" id="basic-addon2">&#64;Admin.com</span>
                </div>

                <div class="wrap-input100">
                    <i class="bi bi-eye-slash" id="togglePassword"></i>
                    <input class="input100" type="password" name="password" autocomplete="current-password" id="id_password" placeholder="كلمة السر" required>
                    <span class="focus-input100" data-placeholder="&#xf191;">	</span>
                </div>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        تسجيل دخول
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

