@model IEnumerable<SHM_Smart_Hospital_Management_.ViewModels.ShowMedicalTest>

@{
    ViewData["Title"] = "ShowMedicalTestForDoctor";
}
@section Styles{
    <link href="~/Medicio2/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" /><!-- bootstrap icons-->
    <link href="~/Medicio2/assets/css/bootstrap.min.css" rel="stylesheet"><!--bootstrap min -->
    <link href="~/Medicio2/Cards/Card.css" rel="stylesheet" /><!-- bootstrap icons-->
}

<a asp-action="Create" asp-route-id="@ViewBag.Medical_Detail_Id" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId" style="position: relative; left: 45%; text-decoration: none; color: gray ">إضافة تحليل</a>
<div class="container">
    <div class="row">
        @{ int i = 1;}
        @foreach (var item in Model)
        {
            string exampleModal = "exampleModal" + i;
            <div class="col-4">
                <div class="card ">
                    <a data-toggle="modal" data-target="#@exampleModal">
                        <img class="bd-placeholder-img card-img-top" src="~/Medical_Test_Result/@item.Result" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@item.Test_Name</h5>
                        <p class="card-text">@item.Date</p>
                    </div>
                </div>
            </div>
            <!--Modal start-->
            <div class="modal fade " id="@exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel3" aria-hidden="true" dir="ltr">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body Center ">
                            <img class="bd-placeholder-img card-img-top" src="~/Medical_Test_Result/@item.Result" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn delete_btn " data-dismiss="modal">إغلاق</button>
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }

    </div>
</div>
<a asp-controller="Medical_Detail" asp-action="ShowMedicalDetailsForDoctor" asp-route-id="@ViewBag.PatientId" asp-route-DocId="@ViewBag.DocId" asp-route-HoId="@ViewBag.HoId" style="position: relative; left: 44%; text-decoration: none; color: gray;">رجوع للخلف</a>
@section Scripts{
    <script src="~/Medicio2/dashborde/vendor/jquery/jquery.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Medicio2/dashborde/vendor/jquery-easing/jquery.easing.min.js"></script>
}