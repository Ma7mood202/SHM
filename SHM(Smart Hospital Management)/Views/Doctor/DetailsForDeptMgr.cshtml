</div>
<div>
    <a asp-controller="Doctor" asp-action="DisplayDoctrosByDeptId" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId" style="position: relative; left: 48%;">Back to List</a><br />
    <a asp-controller="Doctor" asp-action="Master" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId" style="position: relative; left: 45.5%;">Back to Master Page</a>
</div>
@section Scripts{
